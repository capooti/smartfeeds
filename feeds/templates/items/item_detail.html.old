{% extends "base.html" %}
{% load feeds_tags %}

{% block title %}Details for item {{ item.title }}{% endblock %}

{% block content %}

    <!-- people list -->
    {% show_people %}
    
    <!-- item detail -->
    <ul>
        <li>Update: {{ item.updated }}</li>
        <li>Title: {{ item.title }}</li>
        <li>Feed: {{ item.feed.name }}</li>
        
        {% if item.domain_country %}
        <li>Domain Country:
            <img src="{{ STATIC_URL}}images/flags/{{ item.domain_country.iso2|lower }}.gif" alt="{{ item.domain_country }}" /> {{ item.domain_country.name }} 
        {% endif %}
        </li>
        <li><a href="{{ item.link }}">Link</a></li>
    </ul>
    
    <!-- places list -->
    This news may refer to the following places:
    <ul>
    {% for place in item.place_set.all %}
        <li>
            {% if place.country %}
                <img src="{{ STATIC_URL}}images/flags/{{ place.country.iso2|lower }}.gif" alt="{{ place.country }}" />
            {% endif %}
         <a href="{% url place-detail place.slug_name %}">{{ place.name }}</a>
         {% if place.country %} ({{ place.country }}) {% endif %}
        </li>
    {% endfor %}
    </ul>
    
{% endblock %}

